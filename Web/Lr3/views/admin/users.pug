extends base.pug

block content
    h1 Список участников

    table(class="table table-bordered")
        thead
            tr
                th(style="width: 60%; text-align: center") Имя
                th(style="width: 40%; text-align: center") Баланс
        tbody(style = "text-align: center")
            each user in users
                tr
                    td(style="vertical-align: middle")=user.name
                    td(style="vertical-align: middle")=user.balance
                    td(style = "border-style: hidden; border-left: inherit")
                        if user.in == "True"
                            a(role = "button" class="btn btn-danger")
                                img(src="/public/images/open-iconic-master/svg/circle-x.svg")
                        else
                            a(role = "button" class="btn btn-info")
                                img(src="/public/images/open-iconic-master/svg/plus.svg")
