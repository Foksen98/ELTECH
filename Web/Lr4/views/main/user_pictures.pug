extends base.pug

block content

    h1 Список приобретённых картин
    br
    div(class="row")
        div(class="col-sm-1")
        div(class="col-sm-8")
            table(class="table table-bordered table-light")
                thead
                    tr
                        th(style="width: 25%; text-align: center") Название
                        th(style="width: 20%; text-align: center") Автор
                        th(style="width: 10%; text-align: center") Год
                        th(style="width: 10%; text-align: center") Цена
                tbody(style="text-align: center; vertical-align: middle")
                    each picture in pictures
                        tr
                            td=picture.title
                            td=picture.author
                            td=picture.creation_date
                            td=picture.price
        div(class="col-sm-3")
